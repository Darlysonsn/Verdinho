<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_default"
        android:layout_marginRight="@dimen/padding_default"
        android:contentDescription="Separador"
        android:src="@drawable/linhadotempo"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textview_onibus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Ã´nibus 29938"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textview_horario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/padding_mini"
                android:paddingRight="@dimen/padding_mini"
                android:textColor="@android:color/white"
                tools:background="@drawable/badge_medio"
                tools:text="22:39 - 3 minutos"/>

            <ImageView
                android:id="@+id/image_acessibilidade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_mini"
                android:background="@drawable/badge_acessibilidade"
                android:padding="2dp"
                android:src="@drawable/acessibilidade"
                android:visibility="gone"
                tools:visibility="visible"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>